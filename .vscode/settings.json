{
	"haxe.configurations": [
		["display.hxml"]
	],
	"[haxe]": {
		"editor.formatOnSave": true,
		"editor.formatOnPaste": true,
	},
	"haxe.enableCompilationServer": true,
	"haxecheckstyle.sourceFolders": [
		"src",
		"test"
	],
	"haxe.inlayHints": {
        "variableTypes": true,
        "parameterNames": true,
        "parameterTypes": false,
        "functionReturnTypes": true,
        "conditionals": true
    },
	"haxe.importsSortOrder": "stdlib -> libs -> project"
}
